      // cart_abandoned();
      // activecampaign();
      // rdstation();
    }
    // LOAD SCRIPT
    if (window.jQuery) {
      main();
    }
    else {
      let script    = document.createElement('script');
      script.type   = 'text/javascript';
      script.src    = '//ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js';
      script.onload = () => main();
      document.head.appendChild(script);
    }
